<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin • Categorias</title>

  <link rel="stylesheet" href="/css/app.css" />
  <style>
    :root{
      --bg:#07040d;
      --card: rgba(255,255,255,.06);
      --stroke: rgba(255,255,255,.12);
      --txt: rgba(255,255,255,.92);
      --muted: rgba(255,255,255,.70);
      --pink:#ff4fd8;
      --purple:#8b5bff;
      --glow: 0 0 22px rgba(255,79,216,.20), 0 0 28px rgba(139,91,255,.18);
    }
    body{ background: radial-gradient(900px 650px at 50% 20%, rgba(139,91,255,.18), transparent 60%), var(--bg); color: var(--txt); }
    .wrap{ max-width: 1100px; margin: 0 auto; padding: 26px 16px 50px; }
    .top{ display:flex; align-items:center; justify-content:space-between; gap:12px; flex-wrap:wrap; margin-bottom: 12px; }
    .brand{ padding: 10px 12px; border-radius: 16px; background: rgba(255,255,255,.04); border: 1px solid var(--stroke); box-shadow: var(--glow); }
    h1{ margin:0; font-size: 1.15rem; }
    p{ margin:6px 0 0; color: var(--muted); }
    a.link{ color: rgba(255,255,255,.9); text-decoration:none; border-bottom: 1px solid rgba(255,255,255,.2); }
    .panel{ background: var(--card); border: 1px solid var(--stroke); border-radius: 18px; padding: 14px; box-shadow: 0 18px 40px rgba(0,0,0,.35); }
    .grid{ display:grid; grid-template-columns: repeat(12, 1fr); gap: 14px; }
    .left{ grid-column: span 5; }
    .right{ grid-column: span 7; }
    label{ font-size: .86rem; color: var(--muted); display:block; margin: 10px 0 6px; }
    input{
      width: 100%;
      padding: 11px 12px;
      border-radius: 14px;
      background: rgba(255,255,255,.07);
      border: 1px solid var(--stroke);
      color: var(--txt);
      outline: none;
    }
    input:focus{ box-shadow: var(--glow); border-color: rgba(255,79,216,.35); }
    .row{ display:flex; gap:10px; }
    .row > div{ flex:1; }
    .check{ display:flex; gap:10px; align-items:center; margin-top: 12px; color: var(--muted); }
    .check input{ width:auto; }
    .btn{
      margin-top: 12px;
      width:100%;
      border:none; cursor:pointer;
      border-radius: 14px;
      padding: 11px 12px;
      color: rgba(255,255,255,.95);
      background: linear-gradient(90deg, rgba(255,79,216,.95), rgba(139,91,255,.92));
      box-shadow: var(--glow);
      font-weight: 900;
    }
    table{ width:100%; border-collapse: collapse; }
    th, td{ padding: 10px 10px; border-bottom: 1px solid rgba(255,255,255,.10); vertical-align: top; }
    th{ text-align:left; color: var(--muted); font-weight: 700; font-size: .86rem; }
    .pill{
      display:inline-flex; padding: 4px 10px; border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12); background: rgba(255,255,255,.06);
      font-size: .78rem; color: rgba(255,255,255,.88);
    }
    .actions{ display:flex; gap:8px; flex-wrap:wrap; }
    .mini{
      padding: 8px 10px; border-radius: 12px; cursor:pointer;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.06);
      color: var(--txt);
    }
    .danger{ border-color: rgba(255,79,216,.25); background: rgba(255,79,216,.10); }
    @media (max-width: 980px){
      .left,.right{ grid-column: span 12; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="top">
      <div class="brand">
        <h1>Admin • Categorias</h1>
        <p><a class="link" href="/admin">Voltar</a></p>
      </div>

      <form method="post" action="/admin/logout">
        <button class="mini" type="submit">Sair</button>
      </form>
    </div>

    <div class="grid">
      <div class="panel left">
        <h3 style="margin:0 0 6px;">Nova categoria</h3>
        <p style="margin:0 0 10px;color:var(--muted);">Slug pode ficar em branco (gera automático).</p>

        <form method="post" action="/admin/categorias">
          <label>Nome</label>
          <input name="nome" required placeholder="Ex: Vibradores" />

          <label>Slug (opcional)</label>
          <input name="slug" placeholder="Ex: vibradores" />

          <div class="check">
            <input id="ativa" type="checkbox" name="ativa" checked />
            <label for="ativa" style="margin:0;color:var(--muted);">Ativa</label>
          </div>

          <button class="btn" type="submit">Salvar</button>
        </form>
      </div>

      <div class="panel right">
        <h3 style="margin:0 0 10px;">Categorias cadastradas</h3>

        <table>
          <thead>
            <tr>
              <th>Nome</th>
              <th>Slug</th>
              <th>Status</th>
              <th style="width: 220px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% (categories || []).forEach(c => { %>
              <tr>
                <td>
                  <b><%= c.nome %></b>
                  <div style="color:var(--muted);font-size:.85rem;">ID: <%= c.id %></div>
                </td>
                <td><span class="pill"><%= c.slug %></span></td>
                <td><span class="pill"><%= c.ativa ? "Ativa" : "Inativa" %></span></td>
                <td>
                  <div class="actions">
                    <%
                      const payloadObj = {
                        id: c.id,
                        nome: c.nome || "",
                        slug: c.slug || "",
                        ativa: !!c.ativa
                      };
                      const payload = encodeURIComponent(JSON.stringify(payloadObj));
                    %>

                    <button
                      class="mini js-edit"
                      type="button"
                      data-payload="<%= payload %>"
                    >
                      Editar
                    </button>

                    <form method="post" action="/admin/categorias/<%= c.id %>/delete" onsubmit="return confirm('Excluir a categoria?')">
                      <button class="mini danger" type="submit">Excluir</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>

            <% if (!categories || categories.length === 0) { %>
              <tr>
                <td colspan="4" style="color:var(--muted);">Nenhuma categoria cadastrada ainda.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- modal simples -->
  <div id="modal" style="display:none;position:fixed;inset:0;background:rgba(0,0,0,.55);backdrop-filter: blur(6px);">
    <div style="max-width:520px;margin:10vh auto;background:rgba(255,255,255,.07);border:1px solid rgba(255,255,255,.12);border-radius:18px;padding:14px;box-shadow:0 18px 44px rgba(0,0,0,.45);">
      <div style="display:flex;justify-content:space-between;align-items:center;gap:10px;">
        <h3 style="margin:0;">Editar categoria</h3>
        <button class="mini" type="button" onclick="closeEdit()">Fechar</button>
      </div>

      <form id="editForm" method="post">
        <label>Nome</label>
        <input id="e_nome" name="nome" required />

        <label>Slug</label>
        <input id="e_slug" name="slug" />

        <div class="check">
          <input id="e_ativa" type="checkbox" name="ativa" />
          <label for="e_ativa" style="margin:0;color:var(--muted);">Ativa</label>
        </div>

        <button class="btn" type="submit">Salvar alterações</button>
      </form>
    </div>
  </div>

  <script>
    const modal = document.querySelector("#modal");
    const editForm = document.querySelector("#editForm");
    const eNome = document.querySelector("#e_nome");
    const eSlug = document.querySelector("#e_slug");
    const eAtiva = document.querySelector("#e_ativa");

    function openEdit(id, nome, slug, ativa){
      editForm.action = "/admin/categorias/" + id;
      eNome.value = nome || "";
      eSlug.value = slug || "";
      eAtiva.checked = !!ativa;
      modal.style.display = "block";
    }

    function closeEdit(){
      modal.style.display = "none";
    }

    // fechar clicando fora
    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeEdit();
    });

    // ✅ sem onclick com parâmetros
    document.addEventListener("click", (e) => {
      const btn = e.target.closest(".js-edit");
      if (!btn) return;

      try {
        const encoded = btn.getAttribute("data-payload") || "";
        const payload = JSON.parse(decodeURIComponent(encoded));

        openEdit(
          payload.id,
          payload.nome,
          payload.slug,
          payload.ativa
        );
      } catch (err) {
        console.error("Falha ao abrir edição:", err);
        alert("Não foi possível abrir o modal de edição. Veja o console.");
      }
    });
  </script>
</body>
</html>
