<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin • Variações</title>

  <link rel="stylesheet" href="/css/app.css" />
  <style>
    :root{
      --bg:#07040d;
      --card: rgba(255,255,255,.06);
      --stroke: rgba(255,255,255,.12);
      --txt: rgba(255,255,255,.92);
      --muted: rgba(255,255,255,.70);
      --pink:#ff4fd8;
      --purple:#8b5bff;
      --glow: 0 0 22px rgba(255,79,216,.20), 0 0 28px rgba(139,91,255,.18);
    }
    body{ background: radial-gradient(900px 650px at 50% 20%, rgba(139,91,255,.18), transparent 60%), var(--bg); color: var(--txt); }
    .wrap{ max-width: 1250px; margin: 0 auto; padding: 26px 16px 50px; }
    .top{ display:flex; align-items:flex-start; justify-content:space-between; gap:12px; flex-wrap:wrap; margin-bottom: 12px; }
    .brand{ padding: 10px 12px; border-radius: 16px; background: rgba(255,255,255,.04); border: 1px solid var(--stroke); box-shadow: var(--glow); }
    h1{ margin:0; font-size: 1.15rem; }
    .muted{ color: var(--muted); }
    a.link{ color: rgba(255,255,255,.9); text-decoration:none; border-bottom: 1px solid rgba(255,255,255,.2); }

    .panel{ background: var(--card); border: 1px solid var(--stroke); border-radius: 18px; padding: 14px; box-shadow: 0 18px 40px rgba(0,0,0,.35); }
    .grid{ display:grid; grid-template-columns: repeat(12, 1fr); gap: 14px; }
    .left{ grid-column: span 5; }
    .right{ grid-column: span 7; }

    label{ font-size: .86rem; color: var(--muted); display:block; margin: 10px 0 6px; }
    input{
      width: 100%;
      padding: 11px 12px;
      border-radius: 14px;
      background: rgba(255,255,255,.07);
      border: 1px solid var(--stroke);
      color: var(--txt);
      outline: none;
    }
    input:focus{ box-shadow: var(--glow); border-color: rgba(255,79,216,.35); }
    .row{ display:flex; gap:10px; flex-wrap:wrap; }
    .row > div{ flex:1; min-width: 220px; }

    .check{ display:flex; gap:10px; align-items:center; margin-top: 12px; color: var(--muted); }
    .check input{ width:auto; }

    .btn{
      margin-top: 12px;
      width:100%;
      border:none; cursor:pointer;
      border-radius: 14px;
      padding: 11px 12px;
      color: rgba(255,255,255,.95);
      background: linear-gradient(90deg, rgba(255,79,216,.95), rgba(139,91,255,.92));
      box-shadow: var(--glow);
      font-weight: 900;
      text-decoration:none;
      display:inline-flex;
      justify-content:center;
      align-items:center;
      gap:8px;
    }

    table{ width:100%; border-collapse: collapse; }
    th, td{ padding: 10px 10px; border-bottom: 1px solid rgba(255,255,255,.10); vertical-align: top; }
    th{ text-align:left; color: var(--muted); font-weight: 700; font-size: .86rem; }

    .pill{
      display:inline-flex; padding: 4px 10px; border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12); background: rgba(255,255,255,.06);
      font-size: .78rem; color: rgba(255,255,255,.88);
    }

    .actions{ display:flex; gap:8px; flex-wrap:wrap; }
    .mini{
      padding: 8px 10px; border-radius: 12px; cursor:pointer;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.06);
      color: var(--txt);
      text-decoration:none;
      display:inline-flex;
      align-items:center;
      gap:8px;
      white-space:nowrap;
    }
    .danger{ border-color: rgba(255,79,216,.25); background: rgba(255,79,216,.10); }
    .err{
      margin-top: 10px;
      padding: 10px 12px;
      border-radius: 14px;
      border: 1px solid rgba(255,79,216,.22);
      background: rgba(255,79,216,.10);
      color: rgba(255,255,255,.92);
    }

    @media (max-width: 980px){
      .left,.right{ grid-column: span 12; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="top">
      <div class="brand">
        <h1>Variações • <%= product.nome %></h1>
        <div class="muted">SKU: <b><%= product.sku %></b></div>
        <div class="muted" style="margin-top:6px;">
          <a class="link" href="/admin/produtos">Voltar</a>
          &nbsp;•&nbsp;
          <a class="link" href="/admin/produtos/<%= product.id %>/imagens">Imagens</a>
          &nbsp;•&nbsp;
          <a class="link" href="/catalogo/produto/<%= product.id %>">Ver no catálogo</a>
        </div>
      </div>

      <form method="post" action="/admin/logout">
        <button class="mini" type="submit">Sair</button>
      </form>
    </div>

    <div class="grid">
      <div class="panel left">
        <h3 style="margin:0 0 6px;">Nova variação</h3>
        <div class="muted">Ex: Cor = Pink (estoque + adicional).</div>

        <% if (error) { %>
          <div class="err"><b>Erro:</b> <%= error %></div>
        <% } %>

        <form method="post" action="/admin/produtos/<%= product.id %>/variacoes">
          <label>Atributo</label>
          <input name="atributo" value="Cor" placeholder="Ex: Cor" />

          <label>Opção</label>
          <input name="opcao" required placeholder="Ex: Pink" />

          <div class="row">
            <div>
              <label>Estoque</label>
              <input name="estoque_atual" type="number" step="1" value="0" />
            </div>
            <div>
              <label>Adicional de preço (R$)</label>
              <input name="adicional_preco" type="number" step="0.01" value="0" />
            </div>
          </div>

          <div class="row">
            <div>
              <label>SKU da variação (opcional)</label>
              <input name="sku_variant" placeholder="Ex: SEX-GOLFINHO-PINK" />
            </div>
            <div>
              <label>Ordem</label>
              <input name="ordem" type="number" step="1" value="0" />
            </div>
          </div>

          <label>Imagem URL (opcional)</label>
          <input name="image_url" placeholder="https://..." />

          <div class="check">
            <input id="ativa" type="checkbox" name="ativo" checked />
            <label for="ativa" style="margin:0;color:var(--muted);">Ativa</label>
          </div>

          <button class="btn" type="submit">Salvar variação</button>
        </form>
      </div>

      <div class="panel right">
        <h3 style="margin:0 0 10px;">Variações cadastradas</h3>

        <div id="payload" data-payload="<%= payload %>"></div>

        <table>
          <thead>
            <tr>
              <th>Atributo</th>
              <th>Opção</th>
              <th>Estoque</th>
              <th>+Preço</th>
              <th>Status</th>
              <th style="width: 260px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% (variants || []).forEach(v => { %>
              <tr>
                <td><span class="pill"><%= v.atributo %></span></td>
                <td><b><%= v.opcao %></b></td>
                <td><span class="pill"><%= v.estoque_atual %></span></td>
                <td><span class="pill">R$ <%= Number(v.adicional_preco || 0).toFixed(2).replace(".", ",") %></span></td>
                <td><span class="pill"><%= v.ativo ? "Ativa" : "Inativa" %></span></td>
                <td>
                  <div class="actions">
                    <button class="mini js-edit" type="button" data-id="<%= v.id %>">Editar</button>

                    <form method="post" action="/admin/produtos/<%= product.id %>/variacoes/<%= v.id %>/delete"
                          onsubmit="return confirm('Excluir esta variação?')">
                      <button class="mini danger" type="submit">Excluir</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>

            <% if (!variants || variants.length === 0) { %>
              <tr>
                <td colspan="6" class="muted">Nenhuma variação cadastrada ainda.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- modal editar -->
  <div id="modal" style="display:none;position:fixed;inset:0;background:rgba(0,0,0,.55);backdrop-filter: blur(6px);">
    <div style="max-width:720px;margin:7vh auto;background:rgba(255,255,255,.07);border:1px solid rgba(255,255,255,.12);border-radius:18px;padding:14px;box-shadow:0 18px 44px rgba(0,0,0,.45);">
      <div style="display:flex;justify-content:space-between;align-items:center;gap:10px;">
        <h3 style="margin:0;">Editar variação</h3>
        <button class="mini" type="button" onclick="closeEdit()">Fechar</button>
      </div>

      <form id="editForm" method="post" style="margin-top:10px;">
        <label>Atributo</label>
        <input id="e_atributo" name="atributo" required />

        <label>Opção</label>
        <input id="e_opcao" name="opcao" required />

        <div class="row">
          <div>
            <label>Estoque</label>
            <input id="e_estoque" name="estoque_atual" type="number" step="1" />
          </div>
          <div>
            <label>Adicional de preço (R$)</label>
            <input id="e_add" name="adicional_preco" type="number" step="0.01" />
          </div>
        </div>

        <div class="row">
          <div>
            <label>SKU da variação</label>
            <input id="e_sku" name="sku_variant" />
          </div>
          <div>
            <label>Ordem</label>
            <input id="e_ordem" name="ordem" type="number" step="1" />
          </div>
        </div>

        <label>Imagem URL</label>
        <input id="e_image" name="image_url" />

        <div class="check">
          <input id="e_ativo" type="checkbox" name="ativo" />
          <label for="e_ativo" style="margin:0;color:var(--muted);">Ativa</label>
        </div>

        <button class="btn" type="submit">Salvar alterações</button>
      </form>
    </div>
  </div>

  <script>
    const modal = document.querySelector("#modal");
    const editForm = document.querySelector("#editForm");

    const eAtributo = document.querySelector("#e_atributo");
    const eOpcao = document.querySelector("#e_opcao");
    const eEstoque = document.querySelector("#e_estoque");
    const eAdd = document.querySelector("#e_add");
    const eSku = document.querySelector("#e_sku");
    const eOrdem = document.querySelector("#e_ordem");
    const eImage = document.querySelector("#e_image");
    const eAtivo = document.querySelector("#e_ativo");

    const payloadEl = document.querySelector("#payload");
    const data = JSON.parse(decodeURIComponent(payloadEl.getAttribute("data-payload") || "%7B%7D"));
    const variants = Array.isArray(data.variants) ? data.variants : [];

    function openEdit(v){
      editForm.action = "/admin/produtos/<%= product.id %>/variacoes/" + v.id;

      eAtributo.value = v.atributo || "Cor";
      eOpcao.value = v.opcao || "";
      eEstoque.value = v.estoque_atual || 0;
      eAdd.value = v.adicional_preco || 0;
      eSku.value = v.sku_variant || "";
      eOrdem.value = v.ordem || 0;
      eImage.value = v.image_url || "";
      eAtivo.checked = !!v.ativo;

      modal.style.display = "block";
    }
    function closeEdit(){
      modal.style.display = "none";
    }

    document.addEventListener("click", (e) => {
      const btn = e.target.closest(".js-edit");
      if (!btn) return;
      const id = btn.getAttribute("data-id");
      const v = variants.find(x => String(x.id) === String(id));
      if (v) openEdit(v);
    });
  </script>
</body>
</html>
