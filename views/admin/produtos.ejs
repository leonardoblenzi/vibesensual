<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Admin • Produtos</title>

  <link rel="stylesheet" href="/css/app.css" />
  <style>
    :root{
      --bg:#07040d;
      --card: rgba(255,255,255,.06);
      --stroke: rgba(255,255,255,.12);
      --txt: rgba(255,255,255,.92);
      --muted: rgba(255,255,255,.70);
      --pink:#ff4fd8;
      --purple:#8b5bff;
      --glow: 0 0 22px rgba(255,79,216,.20), 0 0 28px rgba(139,91,255,.18);
    }
    body{ background: radial-gradient(900px 650px at 50% 20%, rgba(139,91,255,.18), transparent 60%), var(--bg); color: var(--txt); }
    .wrap{ max-width: 1250px; margin: 0 auto; padding: 26px 16px 50px; }
    .top{ display:flex; align-items:center; justify-content:space-between; gap:12px; flex-wrap:wrap; margin-bottom: 12px; }
    .brand{ padding: 10px 12px; border-radius: 16px; background: rgba(255,255,255,.04); border: 1px solid var(--stroke); box-shadow: var(--glow); }
    h1{ margin:0; font-size: 1.15rem; }
    p{ margin:6px 0 0; color: var(--muted); }
    a.link{ color: rgba(255,255,255,.9); text-decoration:none; border-bottom: 1px solid rgba(255,255,255,.2); }
    .panel{ background: var(--card); border: 1px solid var(--stroke); border-radius: 18px; padding: 14px; box-shadow: 0 18px 40px rgba(0,0,0,.35); }
    .grid{ display:grid; grid-template-columns: repeat(12, 1fr); gap: 14px; }
    .left{ grid-column: span 5; }
    .right{ grid-column: span 7; }
    label{ font-size: .86rem; color: var(--muted); display:block; margin: 10px 0 6px; }
    input, select, textarea{
      width: 100%;
      padding: 11px 12px;
      border-radius: 14px;
      background: rgba(255,255,255,.07);
      border: 1px solid var(--stroke);
      color: var(--txt);
      outline: none;
    }
    textarea{ min-height: 84px; resize: vertical; }
    input:focus, select:focus, textarea:focus{ box-shadow: var(--glow); border-color: rgba(255,79,216,.35); }
    .row{ display:flex; gap:10px; }
    .row > div{ flex:1; }
    .check{ display:flex; gap:10px; align-items:center; margin-top: 12px; color: var(--muted); }
    .check input{ width:auto; }
    .btn{
      margin-top: 12px;
      width:100%;
      border:none; cursor:pointer;
      border-radius: 14px;
      padding: 11px 12px;
      color: rgba(255,255,255,.95);
      background: linear-gradient(90deg, rgba(255,79,216,.95), rgba(139,91,255,.92));
      box-shadow: var(--glow);
      font-weight: 900;
    }
    table{ width:100%; border-collapse: collapse; }
    th, td{ padding: 10px 10px; border-bottom: 1px solid rgba(255,255,255,.10); vertical-align: top; }
    th{ text-align:left; color: var(--muted); font-weight: 700; font-size: .86rem; }
    .pill{
      display:inline-flex; padding: 4px 10px; border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12); background: rgba(255,255,255,.06);
      font-size: .78rem; color: rgba(255,255,255,.88);
    }
    .actions{ display:flex; gap:8px; flex-wrap:wrap; }
    .mini{
      padding: 8px 10px; border-radius: 12px; cursor:pointer;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.06);
      color: var(--txt);
    }
    .danger{ border-color: rgba(255,79,216,.25); background: rgba(255,79,216,.10); }
    .filters{ display:flex; gap:10px; align-items:center; flex-wrap:wrap; margin: 10px 0 14px; }
    .filters input, .filters select{ width: auto; min-width: 220px; }
    @media (max-width: 980px){
      .left,.right{ grid-column: span 12; }
      .filters input, .filters select{ width: 100%; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="top">
      <div class="brand">
        <h1>Admin • Produtos & Estoque</h1>
        <p><a class="link" href="/admin">Voltar</a></p>
      </div>

      <form method="post" action="/admin/logout">
        <button class="mini" type="submit">Sair</button>
      </form>
    </div>

    <div class="grid">
      <div class="panel left">
        <h3 style="margin:0 0 6px;">Novo produto</h3>
        <p style="margin:0 0 10px;color:var(--muted);">Cadastre SKU, custo e estoque inicial.</p>

        <form method="post" action="/admin/produtos">
          <label>Nome</label>
          <input name="nome" required placeholder="Ex: Lubrificante Neutro 60ml" />

          <label>SKU</label>
          <input name="sku" required placeholder="Ex: VS-LUB-0001" />

          <label>Categoria</label>
          <select name="category_id">
            <option value="">(sem categoria)</option>
            <% (categories || []).forEach(c => { %>
              <option value="<%= c.id %>"><%= c.nome %></option>
            <% }) %>
          </select>

          <label>Descrição (opcional)</label>
          <textarea name="descricao" placeholder="Descrição curta para o catálogo (opcional)"></textarea>

          <div class="row">
            <div>
              <label>Estoque inicial</label>
              <input name="estoque_atual" type="number" step="1" value="0" />
            </div>
            <div>
              <label>Custo médio (R$)</label>
              <input name="custo_medio" type="number" step="0.01" value="0" />
            </div>
          </div>

          <div class="check">
            <input id="publicado" type="checkbox" name="publicado" />
            <label for="publicado" style="margin:0;color:var(--muted);">Publicado no catálogo</label>
          </div>

          <button class="btn" type="submit">Salvar</button>
        </form>
      </div>

      <div class="panel right">
        <h3 style="margin:0 0 10px;">Produtos cadastrados</h3>

        <form class="filters" method="get" action="/admin/produtos">
          <input name="q" value="<%= q || '' %>" placeholder="Buscar por nome ou SKU" />
          <select name="categoryId">
            <option value="">Todas categorias</option>
            <% (categories || []).forEach(c => { %>
              <option value="<%= c.id %>" <%= String(categoryId||'') === String(c.id) ? 'selected' : '' %>><%= c.nome %></option>
            <% }) %>
          </select>
          <button class="mini" type="submit">Filtrar</button>
          <a class="mini" href="/admin/produtos" style="text-decoration:none;display:inline-flex;align-items:center;">Limpar</a>
        </form>

        <table>
          <thead>
            <tr>
              <th>Produto</th>
              <th>Categoria</th>
              <th>Estoque</th>
              <th>Custo</th>
              <th>Status</th>
              <th style="width: 240px;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% (products || []).forEach(p => { %>
              <tr>
                <td>
                  <b><%= p.nome %></b>
                  <div style="color:var(--muted);font-size:.85rem;">SKU: <%= p.sku %></div>
                </td>
                <td><span class="pill"><%= p.category_nome || "—" %></span></td>
                <td><span class="pill"><%= p.estoque_atual %></span></td>
                <td>
                  <span class="pill">
                    R$ <%= Number(p.custo_medio || 0).toFixed(2).replace(".", ",") %>
                  </span>
                </td>
                <td><span class="pill"><%= p.publicado ? "Publicado" : "Rascunho" %></span></td>
                <td>
                  <div class="actions">
                    <%
                      const payloadObj = {
                        id: p.id,
                        nome: p.nome || "",
                        sku: p.sku || "",
                        categoryId: p.category_id || "",
                        publicado: !!p.publicado,
                        descricao: p.descricao || "",
                        estoque: (p.estoque_atual != null ? p.estoque_atual : 0),
                        custo: (p.custo_medio != null ? p.custo_medio : 0)
                      };
                      const payload = encodeURIComponent(JSON.stringify(payloadObj));
                    %>

                    <button
                      class="mini js-edit"
                      type="button"
                      data-payload="<%= payload %>"
                    >
                      Editar
                    </button>

                    <form method="post" action="/admin/produtos/<%= p.id %>/delete" onsubmit="return confirm('Excluir o produto?')">
                      <button class="mini danger" type="submit">Excluir</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>

            <% if (!products || products.length === 0) { %>
              <tr>
                <td colspan="6" style="color:var(--muted);">Nenhum produto cadastrado ainda.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- modal editar -->
  <div id="modal" style="display:none;position:fixed;inset:0;background:rgba(0,0,0,.55);backdrop-filter: blur(6px);">
    <div style="max-width:720px;margin:7vh auto;background:rgba(255,255,255,.07);border:1px solid rgba(255,255,255,.12);border-radius:18px;padding:14px;box-shadow:0 18px 44px rgba(0,0,0,.45);">
      <div style="display:flex;justify-content:space-between;align-items:center;gap:10px;">
        <h3 style="margin:0;">Editar produto</h3>
        <button class="mini" type="button" onclick="closeEdit()">Fechar</button>
      </div>

      <form id="editForm" method="post" style="margin-top:10px;">
        <div class="row">
          <div>
            <label>Nome</label>
            <input id="e_nome" name="nome" required />
          </div>
          <div>
            <label>SKU</label>
            <input id="e_sku" name="sku" required />
          </div>
        </div>

        <label>Categoria</label>
        <select id="e_category_id" name="category_id">
          <option value="">(sem categoria)</option>
          <% (categories || []).forEach(c => { %>
            <option value="<%= c.id %>"><%= c.nome %></option>
          <% }) %>
        </select>

        <label>Descrição</label>
        <textarea id="e_descricao" name="descricao"></textarea>

        <div class="row">
          <div>
            <label>Estoque</label>
            <input id="e_estoque" name="estoque_atual" type="number" step="1" />
          </div>
          <div>
            <label>Custo médio (R$)</label>
            <input id="e_custo" name="custo_medio" type="number" step="0.01" />
          </div>
        </div>

        <div class="check">
          <input id="e_publicado" type="checkbox" name="publicado" />
          <label for="e_publicado" style="margin:0;color:var(--muted);">Publicado no catálogo</label>
        </div>

        <button class="btn" type="submit">Salvar alterações</button>
      </form>
    </div>
  </div>

  <script>
    const modal = document.querySelector("#modal");
    const editForm = document.querySelector("#editForm");
    const eNome = document.querySelector("#e_nome");
    const eSku = document.querySelector("#e_sku");
    const eCat = document.querySelector("#e_category_id");
    const ePub = document.querySelector("#e_publicado");
    const eDesc = document.querySelector("#e_descricao");
    const eEst = document.querySelector("#e_estoque");
    const eCus = document.querySelector("#e_custo");

    function openEdit(id, nome, sku, categoryId, publicado, descricao, estoque, custo){
      editForm.action = "/admin/produtos/" + id;
      eNome.value = nome || "";
      eSku.value = sku || "";
      eCat.value = categoryId || "";
      ePub.checked = !!publicado;
      eDesc.value = descricao || "";
      eEst.value = (estoque !== null && estoque !== undefined) ? estoque : 0;
      eCus.value = (custo !== null && custo !== undefined) ? custo : 0;
      modal.style.display = "block";
    }

    function closeEdit(){
      modal.style.display = "none";
    }

    // fechar clicando fora
    modal.addEventListener("click", (e) => {
      if (e.target === modal) closeEdit();
    });

    // ✅ sem onclick com parâmetros: lê data-payload e abre modal
    document.addEventListener("click", (e) => {
      const btn = e.target.closest(".js-edit");
      if (!btn) return;

      try {
        const encoded = btn.getAttribute("data-payload") || "";
        const payload = JSON.parse(decodeURIComponent(encoded));

        openEdit(
          payload.id,
          payload.nome,
          payload.sku,
          payload.categoryId,
          payload.publicado,
          payload.descricao,
          payload.estoque,
          payload.custo
        );
      } catch (err) {
        console.error("Falha ao abrir edição:", err);
        alert("Não foi possível abrir o modal de edição. Veja o console.");
      }
    });
  </script>
</body>
</html>
