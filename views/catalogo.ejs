<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= lojaNome %> • Catálogo</title>

  <link rel="stylesheet" href="/css/app.css" />
  <style>
    /* Paleta inspirada na sua logo (roxo/rosa neon, fundo escuro) */
    :root{
      --bg: #07040d;
      --card: rgba(255,255,255,.06);
      --stroke: rgba(255,255,255,.10);
      --txt: rgba(255,255,255,.92);
      --muted: rgba(255,255,255,.70);
      --pink: #ff4fd8;
      --purple: #8b5bff;
      --glow: 0 0 22px rgba(255,79,216,.20), 0 0 28px rgba(139,91,255,.18);
    }
    body{ background: radial-gradient(1000px 700px at 50% 20%, rgba(139,91,255,.18), transparent 60%), var(--bg); color: var(--txt); }
    .wrap{ max-width: 1100px; margin: 0 auto; padding: 26px 16px 50px; }
    .top{
      display:flex; align-items:center; justify-content:space-between; gap:16px; flex-wrap:wrap;
      margin-bottom: 18px;
    }
    .brand{
      display:flex; align-items:center; gap:12px;
      padding: 10px 12px; border-radius: 16px;
      background: rgba(255,255,255,.04); border: 1px solid var(--stroke);
      box-shadow: var(--glow);
    }
    .brand img{ width: 44px; height: 44px; object-fit: contain; }
    .brand h1{ font-size: 1.1rem; margin:0; letter-spacing:.3px; }
    .brand p{ margin:2px 0 0; color: var(--muted); font-size: .92rem; }

    .search{
      display:flex; gap:10px; align-items:center;
      flex: 1; min-width: 260px; justify-content:flex-end;
    }
    .search input{
      width: min(520px, 100%);
      padding: 12px 14px;
      border-radius: 14px;
      background: rgba(255,255,255,.06);
      border: 1px solid var(--stroke);
      color: var(--txt);
      outline: none;
    }
    .search input:focus{ box-shadow: var(--glow); border-color: rgba(255,79,216,.35); }

    .grid{
      display:grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 14px;
      margin-top: 14px;
    }
    .card{
      grid-column: span 4;
      background: var(--card);
      border: 1px solid var(--stroke);
      border-radius: 18px;
      padding: 14px;
      position: relative;
      overflow: hidden;
      box-shadow: 0 18px 40px rgba(0,0,0,.35);
    }
    .card:before{
      content:"";
      position:absolute; inset:-2px;
      background: radial-gradient(600px 240px at 30% 0%, rgba(255,79,216,.16), transparent 60%),
                  radial-gradient(500px 240px at 90% 20%, rgba(139,91,255,.16), transparent 60%);
      pointer-events:none;
    }
    .card > *{ position:relative; }
    .tag{
      display:inline-flex; gap:8px; align-items:center;
      font-size:.78rem; color: rgba(255,255,255,.85);
      padding: 6px 10px; border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.06);
      margin-bottom: 10px;
    }
    .name{ font-size: 1.02rem; margin: 0 0 10px; }
    .price{
      font-size: 1.25rem; font-weight: 900; margin: 0 0 12px;
      background: linear-gradient(90deg, var(--pink), var(--purple));
      -webkit-background-clip: text; background-clip: text; color: transparent;
      filter: drop-shadow(0 0 18px rgba(255,79,216,.14));
    }
    .btn{
      width:100%;
      border:none; cursor:pointer;
      border-radius: 14px;
      padding: 11px 12px;
      color: rgba(255,255,255,.95);
      background: linear-gradient(90deg, rgba(255,79,216,.95), rgba(139,91,255,.92));
      box-shadow: var(--glow);
      font-weight: 800;
    }
    .btn:active{ transform: translateY(1px); }

    .footer{
      margin-top: 18px;
      color: var(--muted);
      font-size: .92rem;
      text-align:center;
    }

    @media (max-width: 980px){
      .card{ grid-column: span 6; }
    }
    @media (max-width: 560px){
      .card{ grid-column: span 12; }
      .brand{ width: 100%; }
      .search{ width: 100%; justify-content:stretch; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="top">
      <div class="brand">
        <!-- Se quiser, depois a gente coloca sua logo real em /public/img/logo.png -->
        <div>
          <h1><%= lojaNome %></h1>
          <p>Catálogo • Escolha e chame no WhatsApp</p>
        </div>
      </div>

      <div class="search">
        <input id="q" type="search" placeholder="Buscar produto..." autocomplete="off" />
      </div>
    </div>

    <div class="grid" id="grid">
      <% produtos.forEach(p => { %>
        <div class="card" data-name="<%= (p.nome||'').toLowerCase() %>">
          <div class="tag"><%= p.tag || "Produto" %></div>
          <h3 class="name"><%= p.nome %></h3>
          <div class="price">
            R$ <%= (p.preco || 0).toFixed(2).replace(".", ",") %>
          </div>
          <button class="btn" type="button">Quero esse</button>
        </div>
      <% }) %>
    </div>

    <div class="footer">
      <p>© <%= new Date().getFullYear() %> <%= lojaNome %> • Arapongas/PR</p>
    </div>
  </div>

  <script>
    const q = document.querySelector("#q");
    const cards = Array.from(document.querySelectorAll("[data-name]"));
    q.addEventListener("input", () => {
      const term = (q.value || "").trim().toLowerCase();
      cards.forEach(c => {
        const ok = c.getAttribute("data-name").includes(term);
        c.style.display = ok ? "" : "none";
      });
    });
  </script>
</body>
</html>
